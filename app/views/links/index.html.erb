<%= render 'pages/home' unless user_signed_in? %>


<% @links.each do |link| %>

	<div class="box link">
	<% if link.url.include? '.jpg' or link.url.include? '.png' or link.url.include? '.gif' %>

		<%= link_to(link, class: 'in') do %>
			<img src="<%= link.url %>" width="300" alt="">
		<% end %>
		<p><%= link.title %></p>
	
	<% else %>

		<%= link_to image_tag(link.image.url(:medium)), link, class: 'in' %>
		<% if link.url.length > 0 %>

			<% if link.url.start_with?('http://', 'https://') %>
				<p><a class="ext" href="<%= link.url %>"><%= link.title %></a></p>
			<% else %>
				<p><a class="ext" href="http://<%= link.url %>"><%= link.title %></a></p>
			<% end %>

		<% else %>

			<p><%= link.title %></p>

		<% end %>

	<% end %>
	</div>

<% end %>

<%= will_paginate @links %>

<div id="single" data-no-turbolink>
	
</div>
<div id="ghost" data-no-turbolink>
	
</div>